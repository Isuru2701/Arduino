void setup() {
  // put your setup code here, to run once:
pinMode(11,INPUT);
Serial.begin(9600);
}

void loop() {
  // put your main code here, to run repeatedly:
  if (digitalRead(hi();)
    Serial.println("hello");

    else{
      Serial.println("");
    }
    delay(1000);
  if (digitalRead(bye();)
    Serial.monitor=close
    else{
      Serial.println("");    
    }
void hi()
{ 
  if
  {
    digitalRead(11,HIGH);
    delay(1000);
    digitalRead(11,HIGH);
    delay(1000);
  }
}
void bye()
{
  if
  {
    digitalRead(11,LOW);
    delay(1000);
    digitalRead(11,LOW);
    delay(1000);
  }
}
}
}
